X = df.drop('Churn', axis= 1)
y = df['Churn']


print(f'Features : {X.columns}')


print(f'Target Column : {y}')





from sklearn.model_selection import train_test_split

X_train, X_test, y_train, y_test = train_test_split(
    X, y, 
    test_size= 0.2, 
    stratify= y, 
    random_state= 42
)

print(f'Train Shape : {X_train.shape}')
print(f'Test Shape : {X_test.shape}')





X_train['SeniorCitizen'] = X_train['SeniorCitizen'].astype('object')
X_test['SeniorCitizen'] = X_test['SeniorCitizen'].astype('object')





X_train['AvgChargePerMonth'] = X_train['TotalCharges'] / (X_train['tenure'] + 1)
X_test['AvgChargePerMonth'] = X_test['TotalCharges'] / (X_test['tenure'] + 1)





num_cols = X_train.select_dtypes(include= ['int64', 'float64']).columns 
cat_cols = X_train.select_dtypes(include= ['object']).columns 

print(f'Numeric columns : {num_cols}', "\n")
print(f'Categorical columns : {cat_cols}')





from sklearn.compose import ColumnTransformer 
from sklearn.preprocessing import OneHotEncoder, StandardScaler 

preprocessor = ColumnTransformer(
    transformers= [
        ('num', StandardScaler(), num_cols), 
        ('cat', OneHotEncoder(handle_unknown= 'ignore'), cat_cols)
    ]
)





from sklearn.pipeline import Pipeline 
from sklearn.linear_model import LogisticRegression 
from sklearn.ensemble import RandomForestClassifier, GradientBoostingClassifier 

log_model = Pipeline(steps= [
    ('preprocessor', preprocessor),
    ('classifier', LogisticRegression(max_iter= 1000, class_weight= 'balanced'))
])

rf_model = Pipeline(steps= [
    ('preprocessor', preprocessor),
    ('classifier', RandomForestClassifier(random_state= 42))
])

gb_model = Pipeline(steps= [
    ('preprocessor', preprocessor), 
    ('classifier', GradientBoostingClassifier(random_state = 42))
])





from sklearn.metrics import roc_auc_score 

models = {
    'Logistic' : log_model,  
    'RandomForest' : rf_model,  
    'GradientBoost' : gb_model
} 

for name, model in models.items(): 
    model.fit(X_train, y_train)
    y_prob = model.predict_proba(X_test)[:, 1] 
    roc = roc_auc_score(y_test, y_prob) 
    print(f'{name} : ROC-AUC : {roc: .4f}')





from sklearn.model_selection import GridSearchCV 

param_grid = {
    "classifier__C": [0.01, 0.1, 1, 10],
    "classifier__penalty": ["l2"]
} 

grid = GridSearchCV(
    log_model, 
    param_grid, 
    cv= 5, 
    scoring= 'roc_auc', 
    n_jobs= -1 
)

grid.fit(X_train, y_train)

print(f'Best Params : {grid.best_params_}')
print(f'Best ROC-AUC : {grid.best_score_}')


best_model = grid.best_estimator_

y_prob = best_model.predict_proba(X_test)[:, 1]

from sklearn.metrics import roc_auc_score
print("Final Test ROC-AUC:", roc_auc_score(y_test, y_prob))





import joblib

joblib.dump(best_model, "churn_model.pkl")





import matplotlib.pyplot as plt

probs = best_model.predict_proba(X_test)[:,1]

plt.figure(figsize=(10, 6))
plt.hist(probs, bins=30, color='#3498db', edgecolor='white', linewidth=1.2, alpha=0.85)

plt.title("Churn Probability Distribution", fontsize=20, fontweight='bold', 
          color='#2c3e50', pad=20, fontfamily='Arial')
plt.xlabel("Predicted Churn Probability", fontsize=14, fontweight='semibold', 
           color='#34495e', fontfamily='Arial')
plt.ylabel("Frequency", fontsize=14, fontweight='semibold', 
           color='#34495e', fontfamily='Arial')

# Add grid
plt.grid(axis='y', alpha=0.3, linestyle='--', linewidth=0.7, color='#bdc3c7')
plt.gca().set_axisbelow(True)

# Style the spines
